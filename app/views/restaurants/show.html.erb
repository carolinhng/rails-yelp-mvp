<div class="container_flex">
  <h1> <%= @restaurant.name %># Show</h1>
  <h4>Category : <%= @restaurant.category %> </h2>
  <p>Address : <%= @restaurant.address %></p>
  <p>Phone number : <%= @restaurant.phone_number %></p>

  <button><%= link_to "Back", restaurants_path %></button>
  <button><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></button>
  <ul>
    <% @restaurant.reviews.each do | review | %>
      <li>
        <p><%= review.rating %> <%= review.content %></p>
      </li>
    <% end %>
  </ul>
</div>
